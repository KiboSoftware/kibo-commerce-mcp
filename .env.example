# Kibo Commerce API Configuration
# Copy this file to .env and fill in your actual values

# Kibo API Host (sandbox or production)
KIBO_API_HOST=https://t{tenant}.sandbox.mozu.com

# Application Credentials
KIBO_CLIENT_ID=your_client_id_here
KIBO_CLIENT_SECRET=your_client_secret_here

# Tenant Information
KIBO_TENANT_ID=your_tenant_id_here
KIBO_SITE_ID=your_site_id_here

# Optional: Master Catalog ID (if different from tenant)
KIBO_MASTER_CATALOG_ID=

# Optional: Locale and Currency
KIBO_LOCALE=en-US
KIBO_CURRENCY=USD

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_LOG_LEVEL=info

# Authentication Settings
KIBO_AUTH_CACHE_TTL=3600
KIBO_TOKEN_REFRESH_THRESHOLD=300